@model ViewModels.OrderViewModel

@{
    ViewData["Title"] = "Dettagli Ordine";
}

<h2>Dettagli Ordine</h2>

<div>
    <h4>Ordine</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Utente
        </dt>
        <dd class="col-sm-10">
            @Model.UserName
        </dd>
        <dt class="col-sm-2">
            Indirizzo
        </dt>
        <dd class="col-sm-10">
            @Model.Indirizzo
        </dd>
        <dt class="col-sm-2">
            Note Aggiuntive
        </dt>
        <dd class="col-sm-10">
            @Model.NoteAggiuntive
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.Status
        </dd>
    </dl>
</div>
<div>
    <h4>Prodotti Ordinati</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Prezzo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.ProdottiOrdinati)
            {
                <tr>
                    <td>@product.Nome</td>
                    <td>@product.Prezzo</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a href="/Admin/Order/Index" class="btn btn-secondary">Indietro</a>
</div>
